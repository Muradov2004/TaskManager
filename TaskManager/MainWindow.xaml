<ui:UiWindow x:Class="TaskManager.MainWindow"
             Name="uiwindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:TaskManager"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             WindowStartupLocation="CenterScreen" 
             WindowStyle="None"
             Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <ui:TitleBar/>
        <ListView Grid.Row="1" Name="TasksList" Background="Wheat" Foreground="White">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Icon" DisplayMemberBinding="{Binding ProcessIcon}" Width="20"/>
                    <GridViewColumn Header="Process Name" DisplayMemberBinding="{Binding ProcessName}" Width="150"/>

                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</ui:UiWindow>
